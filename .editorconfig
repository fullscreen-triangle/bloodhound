# EditorConfig for Bloodhound Virtual Machine
# Consciousness-Aware Scientific Computing Platform
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust source files
[*.rs]
indent_size = 4
max_line_length = 100

# Cargo configuration files
[Cargo.toml]
indent_size = 4

[Cargo.lock]
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

[*.pyi]
indent_size = 4
max_line_length = 88

# Python configuration files
[pyproject.toml]
indent_size = 4

[setup.py]
indent_size = 4

[setup.cfg]
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 2

# JavaScript/TypeScript (for web interface)
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML configuration files
[*.toml]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Justfile
[justfile]
indent_style = space
indent_size = 4

[*.just]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
max_line_length = 120

# Dockerfile
[Dockerfile*]
indent_size = 2

[*.dockerfile]
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Environment files
[.env*]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# LaTeX files (for research papers)
[*.{tex,cls,sty}]
indent_size = 2
max_line_length = 80

[*.bib]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
max_line_length = 120

# GitHub Actions
[.github/workflows/*.yml]
indent_size = 2

# Git configuration
[.gitconfig]
indent_style = tab

[.gitignore]
indent_size = 2

[.gitattributes]
indent_size = 2

# CI/CD configuration
[.gitlab-ci.yml]
indent_size = 2

[*.jenkinsfile]
indent_size = 2

# License files
[LICENSE*]
indent_size = 2
max_line_length = 80

[COPYING*]
indent_size = 2
max_line_length = 80

# README files
[README*]
indent_size = 2
max_line_length = 120

# Documentation
[docs/**/*.md]
indent_size = 2
max_line_length = 120

# Example and template files
[*.example]
indent_size = 2

[*.template]
indent_size = 2

# Log files (read-only, no formatting)
[*.log]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files (no formatting)
[*.{png,jpg,jpeg,gif,ico,svg,pdf,zip,tar,gz,bz2}]
insert_final_newline = false
trim_trailing_whitespace = false

# Data files
[*.{csv,tsv,json,jsonl,parquet,arrow}]
trim_trailing_whitespace = false

# Scientific data formats
[*.{vcf,bam,sam,fastq,fasta,mzML,mzXML}]
insert_final_newline = false
trim_trailing_whitespace = false

# Model files
[*.{pt,pth,onnx,pkl,h5,bin,model}]
insert_final_newline = false
trim_trailing_whitespace = false

# Consciousness-aware VM specific files
[*.{consciousness,s-entropy,purpose,harvester}]
indent_size = 4
max_line_length = 100

# Neural architecture files
[*.{neural,architecture,pattern}]
indent_size = 4

# Domain model files
[*.{medical,legal,financial,code,mathematical}]
indent_size = 4

# Configuration for specific tools

# VS Code settings
[.vscode/*.json]
indent_size = 2

# JetBrains IDE
[.idea/**/*.xml]
indent_size = 2

# Pre-commit hooks
[.pre-commit-config.yaml]
indent_size = 2

# Jupyter notebooks
[*.ipynb]
insert_final_newline = false
trim_trailing_whitespace = false

# Test files
[**/tests/**/*.py]
max_line_length = 100

[**/test_*.py]
max_line_length = 100

# Benchmark files
[**/benches/**/*.rs]
max_line_length = 120

# Example files
[**/examples/**/*]
max_line_length = 120